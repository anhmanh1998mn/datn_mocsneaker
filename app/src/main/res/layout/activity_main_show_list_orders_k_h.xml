<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.QuanLyDonHang.MainShowListOrdersKH">
    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        app:tabMode="scrollable"
        app:tabGravity="fill"
        app:tabMaxWidth="0dp"
        app:tabTextColor="#000000"
        app:tabSelectedTextColor="#0040FF"
        app:tabTextAppearance="@style/CustomTextStyle"
        android:id="@+id/tbLayout_showList"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="40dp"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_showlist"
        app:layout_constraintTop_toBottomOf="@+id/tbLayout_showList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>