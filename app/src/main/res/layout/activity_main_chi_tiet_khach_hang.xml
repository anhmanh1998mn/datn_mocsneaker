<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.MainChiTietKhachHang">
    <TextView
        android:id="@+id/txt12"
        android:layout_marginTop="16dp"
        android:textColor="#0536E1"
        android:text="THÔNG TIN KHÁCH HÀNG"
        android:textAlignment="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:gravity="center|left"
        android:textColor="#000"
        android:drawableTint="#0536E1"
        android:drawablePadding="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt12"
        android:id="@+id/txt_khHT"
        android:drawableLeft="@drawable/ic_person_outline_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <TextView
        android:gravity="center|left"
        android:textColor="#000"
        android:drawableTint="#0536E1"
        android:drawablePadding="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_khHT"
        android:id="@+id/txt_khPhone"
        android:drawableLeft="@drawable/ic_account_box_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <TextView
        android:gravity="center|left"
        android:textColor="#000"
        android:drawableTint="#0536E1"
        android:drawablePadding="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_khPhone"
        android:id="@+id/txt_khDiaChi"
        android:drawableLeft="@drawable/ic_phone_android_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <TextView
        android:gravity="center|left"
        android:textColor="#000"
        android:drawableTint="#0536E1"
        android:drawablePadding="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_khDiaChi"
        android:id="@+id/txt_khTK"
        android:drawableLeft="@drawable/ic_location_on_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

</android.support.constraint.ConstraintLayout>