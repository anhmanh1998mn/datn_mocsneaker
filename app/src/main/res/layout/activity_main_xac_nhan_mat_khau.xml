<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.MainXacNhanMatKhau">
    <TextView
        android:id="@+id/txt_dienlaimk"
        android:text="@string/ps1"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:hint="@string/mk_hientai"
        android:id="@+id/edt_matkhauDoi"
        android:drawablePadding="16dp"
        android:drawableTint="#880000"
        android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_dienlaimk"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_tieptucMKDoi"
        android:textColor="#fff"
        android:text="Tiếp tục"
        android:background="@drawable/custombutton"
        app:layout_constraintTop_toBottomOf="@+id/edt_matkhauDoi"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>


</android.support.constraint.ConstraintLayout>