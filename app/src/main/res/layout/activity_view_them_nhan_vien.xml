<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.ViewThemNhanVien">
<!--    <android.support.v7.widget.Toolbar-->
<!--        android:id="@+id/tb2"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="?attr/actionBarSize"-->
<!--        android:background="?attr/colorPrimary"-->
<!--        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"-->
<!--        app:titleTextColor="#fff">-->
<!--    </android.support.v7.widget.Toolbar>-->
    <LinearLayout
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textColor="#000"
            android:textAllCaps="true"
            android:text="Thêm nhân viên"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:textColor="#000"
            android:id="@+id/edt_tenNV"
            android:layout_marginTop="24dp"
            android:hint="Tên nhân viên"
            android:background="@drawable/customedtthem"
            android:layout_width="match_parent"
            android:layout_height="35dp" />
        <EditText
            android:textColor="#000"
            android:inputType="number"
            android:id="@+id/edt_sdtNV"
            android:layout_marginTop="8dp"
            android:hint="Số điện thoại"
            android:background="@drawable/customedtthem"
            android:layout_width="match_parent"
            android:layout_height="35dp" />
        <EditText
            android:textColor="#000"
            android:id="@+id/edt_diachiNV"
            android:layout_marginTop="8dp"
            android:hint="Địa chỉ"
            android:background="@drawable/customedtthem"
            android:layout_width="match_parent"
            android:layout_height="35dp" />
        <TextView
            android:textColor="#000"
            android:textSize="18sp"
            android:id="@+id/edt_ngaysinhnv"
            android:layout_marginTop="8dp"
            android:hint="Ngày sinh"
            android:background="@drawable/customedtthem"
            android:layout_width="match_parent"
            android:layout_height="35dp" />
        <EditText
            android:textColor="#000"
            android:inputType="number"
            android:id="@+id/edt_cmtNV"
            android:layout_marginTop="8dp"
            android:hint="Số chứng minh thư"
            android:background="@drawable/customedtthem"
            android:layout_width="match_parent"
            android:layout_height="35dp" />
        <EditText
            android:textColor="#000"
            android:id="@+id/edt_taikhoanNV"
            android:layout_marginTop="8dp"
            android:hint="Tài khoản"
            android:background="@drawable/customedtthem"
            android:layout_width="match_parent"
            android:layout_height="35dp" />
        <EditText
            android:textColor="#000"
            android:id="@+id/edt_matkhauNV"
            android:layout_marginTop="8dp"
            android:hint="Mật khẩu"
            android:background="@drawable/customedtthem"
            android:layout_width="match_parent"
            android:layout_height="35dp" />
        <Button
            android:id="@+id/btn_themNV1"
            android:textColor="#fff"
            android:layout_marginTop="32dp"
            android:text="Thêm nhân viên"
            android:background="@drawable/custombutton"
            android:layout_width="match_parent"
            android:layout_height="35dp" />
        <Button
            android:id="@+id/btn_huyThemNV"
            android:textColor="#fff"
            android:layout_marginTop="8dp"
            android:text="Hủy"
            android:background="@drawable/custombutton"
            android:layout_width="match_parent"
            android:layout_height="35dp" />
    </LinearLayout>

</LinearLayout>