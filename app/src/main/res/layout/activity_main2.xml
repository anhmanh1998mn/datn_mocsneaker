<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:weightSum="9"
    android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="#0536E1"
        android:weightSum="7"
        android:orientation="horizontal"
        android:visibility="gone"
        android:id="@+id/framemain2"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <Button
            android:layout_marginLeft="8dp"
            android:drawableTint="#fff"
            android:id="@+id/btn_backSearch"
            android:background="@null"
            android:drawableLeft="@drawable/ic_keyboard_backspace_black_24dp"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent" />
        <EditText
            android:layout_marginLeft="8dp"
            android:textColorHint="#c6c5c5"
            android:textColor="#fff"
            android:id="@+id/edt_searchHome"
            android:hint="Tìm kiếm..."
            android:layout_width="0dp"
            android:layout_weight="5.5"
            android:layout_height="match_parent" />
        <Button
            android:textAllCaps="false"
            android:textColor="#fff"
            android:text="Search"
            android:background="@null"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:id="@+id/btn_closeSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <fragment
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        app:defaultNavHost="true"
        app:navGraph="@navigation/mobile_navigation" />
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/bottom_nav_menu" />


</LinearLayout>