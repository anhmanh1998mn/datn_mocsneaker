<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.MainProductInsert">
    <ImageView
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/image_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="24dp"
        android:textColor="#013FFF"
        app:layout_constraintTop_toBottomOf="@+id/image_in"
        android:id="@+id/txt_ProductInName"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txt_ProductInSize"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_ProductInName"
        android:layout_marginTop="24dp"
        android:textColor="#000"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RadioGroup
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_ProductInSize"
        android:id="@+id/radiogroup_in"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:textColor="#000"
            android:text="39"
            android:id="@+id/rad_btn39"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:layout_marginLeft="16dp"
            android:textColor="#000"
            android:text="40"
            android:id="@+id/rad_btn40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:layout_marginLeft="16dp"
            android:textColor="#000"
            android:text="41"
            android:id="@+id/rad_btn41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:layout_marginLeft="16dp"
            android:textColor="#000"
            android:text="42"
            android:id="@+id/rad_btn42"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:layout_marginLeft="16dp"
            android:textColor="#000"
            android:text="43"
            android:id="@+id/rad_btn43"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RadioGroup>
    <LinearLayout
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/radiogroup_in"
        android:id="@+id/linear_in"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#000"
            android:textSize="15sp"
            android:text="Số lượng"
            android:layout_width="wrap_content"
            android:layout_height="40dp"/>
        <EditText
            android:layout_marginLeft="16dp"
            android:background="@drawable/customedtsearch"
            android:id="@+id/edt_ProductQuantity"
            android:layout_width="100dp"
            android:layout_height="40dp"/>

    </LinearLayout>
    <Button
        android:text="Thêm"
        android:textColor="#fff"
        android:background="@drawable/custombutton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/linear_in"
        android:id="@+id/btn_Add"
        android:layout_width="200dp"
        android:layout_height="45dp"/>

</android.support.constraint.ConstraintLayout>