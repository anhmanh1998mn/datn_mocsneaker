<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.MainProductInsert">
    <ImageView
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/image_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:textColor="#013FFF"
        app:layout_constraintTop_toBottomOf="@+id/image_in"
        android:id="@+id/txt_ProductInName"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="8dp"
        android:textColor="#000"
        android:textSize="15sp"
        android:textAlignment="center"
        android:text="@string/soLuongIn"
        app:layout_constraintTop_toBottomOf="@+id/txt_ProductInName"
        android:id="@+id/txt_soluongTrongKho"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="13sp"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_soluongTrongKho"
        android:id="@+id/txt_KichCoSoLuongIN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="13sp"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_KichCoSoLuongIN"
        android:id="@+id/txt_KichCoSoLuongIN2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="Kích cỡ"
        android:id="@+id/txt_ProductInSize"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_KichCoSoLuongIN2"
        android:layout_marginTop="24dp"
        android:textColor="#000"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RadioGroup
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_ProductInSize"
        android:id="@+id/radiogroup_in"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:textColor="#000"
            android:text="39"
            android:id="@+id/rad_btn39"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:layout_marginLeft="16dp"
            android:textColor="#000"
            android:text="40"
            android:id="@+id/rad_btn40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:layout_marginLeft="16dp"
            android:textColor="#000"
            android:text="41"
            android:id="@+id/rad_btn41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:layout_marginLeft="16dp"
            android:textColor="#000"
            android:text="42"
            android:id="@+id/rad_btn42"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:layout_marginLeft="16dp"
            android:textColor="#000"
            android:text="43"
            android:id="@+id/rad_btn43"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RadioGroup>
    <LinearLayout
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/radiogroup_in"
        android:id="@+id/linear_in"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#000"
            android:textSize="15sp"
            android:text="Số lượng"
            android:layout_width="wrap_content"
            android:layout_height="30dp"/>
        <EditText
            android:inputType="number"
            android:layout_marginLeft="16dp"
            android:background="@drawable/customedtsearch"
            android:id="@+id/edt_ProductQuantity"
            android:layout_width="100dp"
            android:layout_height="30dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp"
        android:layout_height="50dp"
        android:layout_width="match_parent">
        <Button
            android:layout_weight="2"
            android:text="Thêm"
            android:textColor="#fff"
            android:background="#126AC8"
            android:id="@+id/btn_Add"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <Button
            android:layout_weight="1"
            android:text="Xong"
            android:textColor="#fff"
            android:background="#0034F4"
            android:id="@+id/btn_AddSucess"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>