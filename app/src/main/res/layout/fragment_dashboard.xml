<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#E8E6E6"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">
    <TextView
        android:id="@+id/txt_tenFrag"
        android:textAllCaps="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:textColor="#000"
        android:text="Quản lý cửa hàng"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout

        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/btn_kiemTraDonHang"
            android:drawablePadding="8dp"
            android:paddingLeft="8dp"
            android:drawableTint="#8d4444"
            android:drawableLeft="@drawable/ic_shopping_basket_black_24dp"
            android:drawableRight="@drawable/ic_chevron_right_black_24dp"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:background="#fff"
            android:text="Kiểm tra đơn hàng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_quanLySanPham"
            android:drawablePadding="8dp"
            android:paddingLeft="8dp"
            android:drawableLeft="@drawable/ic_content_paste_black_24dp"
            android:drawableRight="@drawable/ic_chevron_right_black_24dp"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:layout_marginTop="1dp"
            android:background="#fff"
            android:text="Quản lý sản phẩm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:drawablePadding="8dp"
            android:paddingLeft="8dp"
            android:drawableTint="#00a534"
            android:id="@+id/btn_qlnhanvien"
            android:drawableLeft="@drawable/ic_people_outline_black_24dp"
            android:drawableRight="@drawable/ic_chevron_right_black_24dp"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:layout_marginTop="1dp"
            android:background="#fff"
            android:text="Quản lý nhân viên"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_quanLyKhachHang"
            android:drawablePadding="8dp"
            android:paddingLeft="8dp"
            android:drawableTint="#d45c00"
            android:drawableLeft="@drawable/ic_person_outline_black_24dp"
            android:drawableRight="@drawable/ic_chevron_right_black_24dp"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:layout_marginTop="1dp"
            android:background="#fff"
            android:text="Quản lý khách hàng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_quanLyDonHang"
            android:drawablePadding="8dp"
            android:paddingLeft="8dp"
            android:drawableTint="#1a008e"
            android:drawableLeft="@drawable/ic_assignment_black_24dp"
            android:drawableRight="@drawable/ic_chevron_right_black_24dp"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:layout_marginTop="1dp"
            android:background="#fff"
            android:text="Quản lý đơn hàng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_quanLyNhapHang"
            android:drawablePadding="8dp"
            android:paddingLeft="8dp"
            android:drawableTint="#822e2e"
            android:drawableLeft="@drawable/ic_input_black_24dp"
            android:drawableRight="@drawable/ic_chevron_right_black_24dp"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:layout_marginTop="1dp"
            android:background="#fff"
            android:text="Quản lý nhập hàng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>



</LinearLayout>