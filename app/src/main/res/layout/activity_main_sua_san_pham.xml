                android:layout_marginTop="8dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:id="@+id/recycle_CTAnhSP"
                app:layout_constraintTop_toBottomOf="@+id/frame_layout"
                android:layout_height="120dp"/>
