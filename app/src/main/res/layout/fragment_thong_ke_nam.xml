<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:paddingLeft="16dp"
        android:textSize="15sp"
        android:gravity="center"
        android:drawableTint="#0139E1"
        android:drawableLeft="@drawable/ic_date_range_black_24dp"
        android:hint="Chọn năm"
        app:layout_constraintRight_toLeftOf="@+id/btn_thongKe1"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/txt_dateTK1"
        android:background="@drawable/customedtsearch"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="200dp"
        android:layout_height="40dp"/>
    <Button
        android:id="@+id/btn_thongKe1"
        android:textAllCaps="false"
        android:text="Thống kê"
        android:textColor="#fff"
        android:background="@drawable/custombutton"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@+id/txt_dateTK1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="100dp"
        android:layout_height="40dp"/>
    <TextView
        android:textAlignment="center"
        android:textColor="#0038DD"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_thongKe1"
        android:id="@+id/txt_doanhTHuNam"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.github.mikephil.charting.charts.BarChart
        android:layout_marginTop="16dp"
        android:id="@+id/bar_chart"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="650dp"/>
</android.support.constraint.ConstraintLayout>