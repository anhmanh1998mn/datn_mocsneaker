<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.QuanLyTaiKhoan.MainDatLaiMatKhauQuenMK">
    <TextView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        android:textSize="15sp"
        android:text="Thiết lập mật khẩu"
        android:id="@+id/txt_11ThietLap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/edt_matKhauDatLai"
        android:hint="Mật khẩu"
        android:drawablePadding="8sp"
        android:paddingLeft="8sp"
        android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_11ThietLap"
        android:layout_marginTop="8sp"
        android:background="@drawable/customedtsearch"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    <Button
        android:id="@+id/btn_dongY"
        android:textColor="#fff"
        android:text="Đồng ý"
        android:background="@drawable/custombutton"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toBottomOf="@+id/edt_matKhauDatLai"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

</android.support.constraint.ConstraintLayout>