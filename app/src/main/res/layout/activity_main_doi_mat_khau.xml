<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.QuanLyTaiKhoan.MainDoiMatKhau">
    <EditText
        android:drawableTint="#0536E1"
        android:textColor="#000"
        android:drawablePadding="16dp"
        android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
        android:hint="Mật khẩu mới"
        android:id="@+id/edt_doimatkhau1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:textColor="#000"
        android:drawablePadding="16dp"
        android:drawableTint="#0536E1"
        android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
        android:hint="Xác nhận mật khẩu"
        android:id="@+id/edt_doimatkhau2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/edt_doimatkhau1"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_doiMatKhau"
        android:textColor="#fff"
        android:text="Đặt lại"
        android:background="@drawable/custombutton"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/edt_doimatkhau2"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

</android.support.constraint.ConstraintLayout>