<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.QuanLySanPham.MainQLThemSanPham">
    <ImageView
        app:srcCompat="@drawable/ic_baseline_image_24"
        android:id="@+id/img_themSP"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="200dp"
        android:layout_height="200dp"/>

    <Button
        android:id="@+id/btn_chonAnh"
        android:textColor="#fff"
        android:background="@drawable/custombutton"
        android:textAllCaps="false"
        android:text="Chọn ảnh"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="88dp"
        app:layout_constraintLeft_toRightOf="@+id/img_themSP"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/edt_tenSPQL"
        android:paddingLeft="8dp"
        android:hint="Tên sản phẩm"
        android:background="@drawable/customedtsearch"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/img_themSP"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <EditText
        android:inputType="number"
        android:id="@+id/edt_giaSPQL"
        android:paddingLeft="8dp"
        android:hint="Giá sản phẩm"
        android:background="@drawable/customedtsearch"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/edt_tenSPQL"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <TextView
        android:id="@+id/txt_kichCoQL"
        android:text="Kích cỡ"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/edt_giaSPQL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/li_sanPhamQL1"
        android:weightSum="4"
        android:orientation="horizontal"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_kichCoQL"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:textSize="18sp"
            android:gravity="center"
            android:text="39"
            android:background="@drawable/customedtsearch"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <EditText
            android:inputType="number"
            android:id="@+id/edt_size39"
            android:paddingLeft="8dp"
            android:background="@drawable/customedtsearch"
            android:hint="Số lượng"
            android:layout_marginLeft="16dp"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/li_sanPhamQL2"
        android:weightSum="4"
        android:orientation="horizontal"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/li_sanPhamQL1"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:textSize="18sp"
            android:gravity="center"
            android:text="40"
            android:background="@drawable/customedtsearch"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <EditText
            android:inputType="number"
            android:id="@+id/edt_size40"
            android:paddingLeft="8dp"
            android:background="@drawable/customedtsearch"
            android:hint="Số lượng"
            android:layout_marginLeft="16dp"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/li_sanPhamQL3"
        android:weightSum="4"
        android:orientation="horizontal"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/li_sanPhamQL2"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:textSize="18sp"
            android:gravity="center"
            android:text="41"
            android:background="@drawable/customedtsearch"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <EditText
            android:inputType="number"
            android:id="@+id/edt_size41"
            android:paddingLeft="8dp"
            android:background="@drawable/customedtsearch"
            android:hint="Số lượng"
            android:layout_marginLeft="16dp"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/li_sanPhamQL4"
        android:weightSum="4"
        android:orientation="horizontal"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/li_sanPhamQL3"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:textSize="18sp"
            android:gravity="center"
            android:text="42"
            android:background="@drawable/customedtsearch"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <EditText
            android:inputType="number"
            android:id="@+id/edt_size42"
            android:paddingLeft="8dp"
            android:background="@drawable/customedtsearch"
            android:hint="Số lượng"
            android:layout_marginLeft="16dp"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/li_sanPhamQL5"
        android:weightSum="4"
        android:orientation="horizontal"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/li_sanPhamQL4"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:textSize="18sp"
            android:gravity="center"
            android:text="43"
            android:background="@drawable/customedtsearch"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <EditText
            android:inputType="number"
            android:id="@+id/edt_size43"
            android:paddingLeft="8dp"
            android:background="@drawable/customedtsearch"
            android:hint="Số lượng"
            android:layout_marginLeft="16dp"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <EditText
        android:paddingLeft="8dp"
        android:background="@drawable/customedtsearch"
        android:id="@+id/txt_thongTinSPQL"
        android:hint="Thông tin sản phẩm"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@+id/li_sanPhamQL5"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>
    <LinearLayout
        android:weightSum="3"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <Button
            android:id="@+id/btn_themSPXacNhan"
            android:textColor="#fff"
            android:background="#366DF3"
            android:text="Thêm sản phẩm"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/btn_huyThemXacNhan"
            android:textColor="#fff"
            android:background="#023FD3"
            android:text="Hủy"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>