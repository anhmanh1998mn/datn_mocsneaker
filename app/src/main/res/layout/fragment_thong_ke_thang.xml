<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:paddingLeft="16dp"
                android:textSize="15sp"
                android:gravity="center"
                android:drawableTint="#0139E1"
                android:drawableLeft="@drawable/ic_date_range_black_24dp"
                android:hint="Chọn tháng, năm"
                app:layout_constraintRight_toLeftOf="@+id/btn_thongKe"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:id="@+id/txt_dateTK"
                android:background="@drawable/customedtsearch"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="200dp"
                android:layout_height="40dp"/>
            <Button
                android:id="@+id/btn_thongKe"
                android:textAllCaps="false"
                android:text="Thống kê"
                android:textColor="#fff"
                android:background="@drawable/custombutton"
                android:layout_marginTop="8dp"
                app:layout_constraintLeft_toRightOf="@+id/txt_dateTK"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="100dp"
                android:layout_height="40dp"/>
            <TextView
                android:textAlignment="center"
                android:text="Tổng doanh thu"
                android:textColor="#0318C5"
                android:textSize="15sp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_dateTK"
                android:id="@+id/txt_tongDoanhThu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="8dp"
                android:textColor="#000"
                android:textSize="15sp"
                android:text="@string/spbannhieu"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_tongDoanhThu"
                android:id="@+id/txt_spBanNhieu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/re_thongKe1"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_spBanNhieu"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="8dp"
                android:textColor="#000"
                android:textSize="15sp"
                android:text="@string/spbanIt"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/re_thongKe1"
                android:id="@+id/txt_spBanIt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/re_thongKe2"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_spBanIt"
                android:layout_height="wrap_content"/>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>