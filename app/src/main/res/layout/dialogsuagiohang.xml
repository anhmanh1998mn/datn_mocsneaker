<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/dialogGH"

    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_marginTop="8dp"
        android:textColor="#0D33BC"
        android:textSize="18sp"
        android:id="@+id/txt_ghSuaTenSp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="24dp"
        android:weightSum="5"
        android:orientation="horizontal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/linear_gh"
        app:layout_constraintTop_toBottomOf="@+id/txt_ghSuaTenSp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="16dp"
            android:textColor="#000"
            android:textSize="13sp"
            android:text="Số lượng"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="35dp">
            <TextView
                android:id="@+id/btn_giamSLSPGH"
                android:paddingLeft="5dp"
                android:textAlignment="center"
                android:background="@drawable/customedtsearch"
                android:drawableTint="#000"
                android:drawableLeft="@drawable/ic_baseline_remove_24"
                android:textSize="15sp"
                android:layout_width="35dp"
                android:layout_height="match_parent"/>
            <EditText
                android:id="@+id/edt_soLuongspGH1"
                android:inputType="number"
                android:textAlignment="center"
                android:textSize="15sp"
                android:text="1"
                android:background="@drawable/customedtsearch"
                android:layout_width="80dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/btn_themSLSPGH"
                android:paddingLeft="5dp"
                android:textAlignment="center"
                android:background="@drawable/customedtsearch"
                android:drawableTint="#000"
                android:drawableLeft="@drawable/ic_baseline_add_24"
                android:textSize="15sp"
                android:layout_width="35dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_gh2"
        android:layout_marginTop="16dp"
        android:weightSum="5"
        app:layout_constraintTop_toBottomOf="@+id/linear_gh"
        android:orientation="horizontal"
        android:layout_height="wrap_content" android:layout_width="match_parent">
        <TextView
            android:layout_marginLeft="16dp"
            android:textColor="#000"
            android:textSize="13sp"
            android:text="Kích cỡ"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt_kichCoGH"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_gh3"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/linear_gh2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/b_39"
            android:textColor="#fff"
            android:background="#929FE6"
            android:text="39"
            android:layout_width="45dp"
            android:layout_height="45dp"/>
        <Button
            android:id="@+id/b_40"
            android:layout_marginLeft="8dp"
            android:textColor="#fff"
            android:background="#929FE6"
            android:text="40"
            android:layout_width="45dp"
            android:layout_height="45dp"/>
        <Button
            android:id="@+id/b_41"
            android:layout_marginLeft="8dp"
            android:textColor="#fff"
            android:background="#929FE6"
            android:text="41"
            android:layout_width="45dp"
            android:layout_height="45dp"/>
        <Button
            android:id="@+id/b_42"
            android:layout_marginLeft="8dp"
            android:textColor="#fff"
            android:background="#929FE6"
            android:text="42"
            android:layout_width="45dp"
            android:layout_height="45dp"/>
        <Button
            android:id="@+id/b_43"
            android:layout_marginLeft="8dp"
            android:textColor="#fff"
            android:background="#929FE6"
            android:text="43"
            android:layout_width="45dp"
            android:layout_height="45dp"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/linear_gh3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_suaGHXong"
            android:textColor="#fff"
            android:background="@drawable/custombutton"
            android:textAllCaps="false"
            android:text="Xong"
            android:layout_width="80dp"
            android:layout_height="40dp"/>
        <Button
            android:id="@+id/btn_suaGHXoa"
            android:layout_marginLeft="8dp"
            android:textColor="#fff"
            android:background="@drawable/custombutton"
            android:textAllCaps="false"
            android:text="Xóa"
            android:layout_width="80dp"
            android:layout_height="40dp"/>
        <Button
            android:id="@+id/btn_suaGHHuy"
            android:layout_marginLeft="8dp"
            android:textColor="#fff"
            android:background="@drawable/custombutton"
            android:textAllCaps="false"
            android:text="Hủy"
            android:layout_width="80dp"
            android:layout_height="40dp"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>