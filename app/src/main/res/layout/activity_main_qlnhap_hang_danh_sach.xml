<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:weightSum="12"
    android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.QuanLyDonNhapHang.MainQLNhapHangDanhSach">
    <android.support.design.widget.TabLayout
        android:layout_weight="1"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabTextColor="#000000"
        app:tabSelectedTextColor="#0040FF"
        android:background="#fff"
        app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
        app:tabMaxWidth="0dp"
        android:id="@+id/tblayout_qlnh"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_qlnh"
        android:layout_weight="10.1"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <Button
        android:textColor="#fff"
        android:text="@string/qlnh"
        android:background="@drawable/custombutton"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/btn_themDonNhap"
        android:layout_weight="0.9"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

</LinearLayout>