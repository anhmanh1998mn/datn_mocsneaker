<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.QuanLyTaiKhoan.MainQuenMatKhau1">
    <EditText
        android:inputType="number"
        android:id="@+id/edt_guiLaiSDT"
        android:drawablePadding="8sp"
        android:background="@drawable/customedtsearch"
        android:paddingLeft="8sp"
        android:hint="Số điện thoại đăng ký"
        android:drawableLeft="@drawable/ic_phone_android_black_24dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    <Button
        android:id="@+id/btn_guiLaiTiepTheo"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:text="Tiếp theo"
        android:background="@drawable/custombutton"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toBottomOf="@+id/edt_guiLaiSDT"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

</android.support.constraint.ConstraintLayout>